{
  "name": "@papra/app-server",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.11.0",
  "description": "",
  "author": "",
  "keywords": [],
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "esbuild --bundle src/index.ts --platform=node --packages=external --format=cjs --outfile=dist/index.cjs --minify",
    "start": "node dist/index.cjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "migrate:up": "drizzle-kit migrate",
    "migrate:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "clean:db": "rm db.sqlite",
    "clean:storage": "rm -rf local-documents",
    "clean:all": "pnpm clean:db && pnpm clean:storage",
    "dev:reset": "pnpm clean:all && pnpm migrate:push"
  },
  "dependencies": {
    "@corentinth/chisels": "^1.1.0",
    "@hono/node-server": "^1.13.7",
    "@hono/oauth-providers": "^0.6.2",
    "@libsql/client": "^0.14.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.3",
    "esbuild": "^0.24.2",
    "figue": "^2.1.0",
    "hono": "^4.6.15",
    "lodash-es": "^4.17.21",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.2",
    "drizzle-kit": "^0.30.1",
    "eslint": "catalog:",
    "tsx": "^4.19.2",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
